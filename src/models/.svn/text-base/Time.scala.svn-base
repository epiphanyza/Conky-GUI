package models

import java.text.SimpleDateFormat
import java.util.Date

object Time {

    def getSystemDate: String = {
        val today = new Date()
        val sdf = new SimpleDateFormat("dd-MMM-yy hh:mm:ss a")
        val dateNewformat = sdf.format(today)
        return dateNewformat
    }
    
}
